{
  "name": "servitech-frontend",
  "version": "1.0.0",
  "description": "Frontend server for ServiTech",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint:ejs": "npx ejs-lint 'views/**/*.ejs' || true",
    "prestart": "npm run lint:ejs",
    "start:proxy": "cross-env PROXY_MODE=true BACKEND_URL=http://localhost:5020 NODE_ENV=production node server.js",
    "start:dev-proxy": "cross-env PROXY_MODE=true BACKEND_URL=http://localhost:5020 NODE_ENV=development node server.js",
    "dev:proxy": "cross-env PROXY_MODE=true BACKEND_URL=http://localhost:5020 NODE_ENV=development nodemon server.js"
  },
  "dependencies": {
    "connect-redis": "^7.1.0",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-session": "^1.18.2",
    "http-proxy-middleware": "^3.0.5",
    "mongoose": "^8.17.1",
    "node-fetch": "^3.3.2",
    "redis": "^4.6.7"
  },
  "devDependencies": {
    "dotenv": "^17.2.2",
    "cross-env": "^7.0.3",
    "ejs-lint": "^0.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/tests/jest.setup.js"
    ]
  }
}
