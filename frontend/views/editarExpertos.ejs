<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Editar Perfil | Servitech</title>
  <link rel="stylesheet" href="/assets/css/auth.css" />
  <link rel="stylesheet" href="/assets/css/registroExperto.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css" />
</head>

<body>
  <main class="registroExperto-main">
    <section class="registroExperto-section">
      <% if (typeof error !=='undefined' && error) { %>
        <div class="alert alert-danger">
          <%= error %>
        </div>
        <% } %>
          <% if (typeof success !=='undefined' && success) { %>
            <div class="alert alert-success">
              <%= success %>
            </div>
            <% } %>

              <div class="registro-header">
                <div class="registro-header-content">
                  <a href="/" class="logo-link">
                    <img src="/assets/img/logo.png" alt="Logo de ServiTech" class="logo-img">
                  </a>
                  <h1 class="registro-header-title">Editar Perfil de Experto</h1>
                  <p class="subtitle registro-header-subtitle">Actualiza tu información para mantener tu perfil al día
                  </p>
                </div>
                <span id="currentDate" class="registro-fecha"></span>
                <div class="back-home-center">
                  <a href="/perfil" class="back-link"><i class="fas fa-arrow-left"></i>Volver al perfil</a>
                </div>
              </div>

              <% const info=(experto && experto.infoExperto) ? experto.infoExperto : {}; %>

                <form id="registroExpertoForm" class="registroExperto-form">
                  <div class="form-row triple">
                    <div class="form-group compact email-group">
                      <label><i class="fas fa-envelope"></i> Email registrado</label>
                      <div class="email-field"><%- experto && experto.email ? experto.email : '' %></div>
                      <p class="form-hint">Email de tu cuenta (no editable)</p>
                    </div>

                    <div class="form-group compact price-group">
                      <label for="precio">Precio por hora (COP)</label>
                      <div class="price-input">
                        <span class="currency">$</span>
                        <input type="number" id="precio" name="precio" min="10000" step="100" required
                          placeholder="Ej: 50000" value="<%- info && info.precioPorHora ? info.precioPorHora : '' %>">
                      </div>
                      <p class="form-hint">Define un precio proporcional a tu experiencia</p>
                    </div>

                    <div class="form-group compact">
                      <label for="telefonoContacto"><i class="fas fa-phone"></i> Teléfono de contacto</label>
                      <input type="tel" id="telefonoContacto" name="telefonoContacto" placeholder="Ej: 3001234567"
                        value="<%- info && info.telefonoContacto ? info.telefonoContacto : '' %>">
                      <p class="form-hint">Usado para coordinar asesorías</p>
                    </div>
                  </div>

                  <div class="form-row">
                    <div class="form-group">
                      <label for="descripcion">Descripción profesional</label>
                      <textarea id="descripcion" name="descripcion" rows="5"
                        placeholder="Tu experiencia, herramientas y tipos de proyectos"><%- info && info.descripcion ? info.descripcion : '' %></textarea>
                      <p class="form-hint">Sé concreto y específico</p>
                    </div>
                  </div>

                  <div class="form-row double">
                    <div class="form-group">
                      <label for="categorias">Categorías</label>
                      <select id="categorias" name="categorias" multiple>
                        <% (categorias || []).forEach(function(cat){ %>
                          <option value="<%= cat._id || cat.id || cat.nombre %>" <%=info &&
                            Array.isArray(info.categorias) && info.categorias.includes((cat._id||cat.id||cat.nombre))
                            ? 'selected' : '' %>>
                            <%= cat.nombre %>
                          </option>
                          <% }) %>
                      </select>
                    </div>

                    <div class="form-group">
                      <label>Días disponibles</label>
                      <% const diasSel=Array.isArray(info && info.diasDisponibles) ? info.diasDisponibles : []; %>
                        <div class="days-selector">
                          <% ["Lunes","Martes","Miércoles","Jueves","Viernes","Sábado","Domingo"].forEach(function(dia){
                            %>
                            <button type="button" class="day-option <%= diasSel.includes(dia) ? 'selected' : '' %>"
                              data-day="<%= dia %>">
                              <%= dia %>
                            </button>
                            <% }) %>
                        </div>
                        <input type="hidden" id="diasDisponibles" name="diasDisponibles"
                          value="<%- diasSel.join(',') %>">
                        <div class="days-selected-display">Selecciona tus días disponibles</div>
                    </div>
                  </div>

                  <div class="form-row double">
                    <div class="form-group">
                      <label for="fotoPerfil"><i class="fas fa-image"></i> Foto de perfil</label>
                      <input type="file" id="fotoPerfil" accept="image/*">
                      <div id="epPreview" class="avatar-preview">
                        <img id="epImg" alt="Vista previa" />
                        <div id="fotoMeta" class="file-meta">
                          <span id="fotoNombre"></span>
                          <span id="fotoTamano"></span>
                        </div>
                        <button type="button" id="epRemove" class="btn btn-secondary btn-sm">Quitar</button>
                      </div>
                      <div id="fotoError" class="alert alert-danger" style="display:none;"></div>
                    </div>

                    <div class="form-group">
                      <label>Datos bancarios</label>
                      <div class="bank-grid">
                        <div>
                          <label for="banco">Banco</label>
                          <input type="text" id="banco" name="banco"
                            value="<%- info && info.banco ? info.banco : '' %>">
                        </div>
                        <div>
                          <label for="tipoCuenta">Tipo de cuenta</label>
                          <select id="tipoCuenta" name="tipoCuenta">
                            <option value="">Selecciona</option>
                            <option value="Ahorros" <%=info && info.tipoCuenta==='Ahorros' ? 'selected' : '' %>>Ahorros
                            </option>
                            <option value="Corriente" <%=info && info.tipoCuenta==='Corriente' ? 'selected' : '' %>
                              >Corriente</option>
                            <option value="Nequi" <%=info && info.tipoCuenta==='Nequi' ? 'selected' : '' %>>Nequi
                            </option>
                            <option value="Daviplata" <%=info && info.tipoCuenta==='Daviplata' ? 'selected' : '' %>
                              >Daviplata</option>
                          </select>
                        </div>
                        <div>
                          <label for="numeroCuenta">Número de cuenta</label>
                          <div class="password-wrapper">
                            <input type="password" id="numeroCuenta" name="numeroCuenta"
                              value="<%- info && info.numeroCuenta ? info.numeroCuenta : '' %>">
                            <button type="button" id="toggleAccountNumber" class="btn-icon" title="Mostrar/ocultar">
                              <i class="fas fa-eye"></i>
                            </button>
                          </div>
                        </div>
                        <div>
                          <label for="titular">Titular</label>
                          <input type="text" id="titular" name="titular"
                            value="<%- info && info.titular ? info.titular : '' %>">
                        </div>
                        <div>
                          <label for="tipoDocumento">Tipo de documento</label>
                          <select id="tipoDocumento" name="tipoDocumento">
                            <option value="">Selecciona</option>
                            <option value="CC" <%=info && info.tipoDocumento==='CC' ? 'selected' : '' %>>Cédula</option>
                            <option value="CE" <%=info && info.tipoDocumento==='CE' ? 'selected' : '' %>>Cédula de
                              extranjería</option>
                            <option value="PAS" <%=info && info.tipoDocumento==='PAS' ? 'selected' : '' %>>Pasaporte
                            </option>
                          </select>
                        </div>
                        <div>
                          <label for="numeroDocumento">Número de documento</label>
                          <input type="text" id="numeroDocumento" name="numeroDocumento"
                            value="<%- info && info.numeroDocumento ? info.numeroDocumento : '' %>">
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="form-actions">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Guardar cambios</button>
                  </div>
                </form>
    </section>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
  <script src="/assets/js/registroExperto.js"></script>
</body>

</html>
