<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mis Asesorías | ServiTech</title>

  <!-- Estilos CSS -->
  <link rel="stylesheet" href="/assets/css/base.css">
  <link rel="stylesheet" href="/assets/css/componentes.css">
  <link rel="stylesheet" href="/assets/css/mis-asesorias.css">

  <!-- Font Awesome para iconos -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
  <%- include('componentes/header') %>

    <main class="main-content">
      <div class="container">
        <section class="asesorias-section">

          <!-- Header de la página -->
          <header class="page-header">
            <div class="header-content">
              <h1>
                <i class="fas fa-calendar-alt"></i>
                Mis Asesorías
              </h1>
              <p class="page-description">
                Gestiona tus asesorías como experto y revisa las que has solicitado como cliente
              </p>
            </div>

            <div class="header-actions">
              <a href="/expertos.html" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Nueva Asesoría
              </a>
            </div>
          </header>

          <!-- Filtros de asesorías -->
          <nav class="filtros-container">
            <div class="filtros-label">
              <i class="fas fa-filter"></i>
              Filtrar por:
            </div>

            <div class="filtros-buttons">
              <button class="filtro-asesoria active" data-filtro="todas">
                <i class="fas fa-list"></i>
                Todas
              </button>
              <button class="filtro-asesoria" data-filtro="pendiente-aceptacion">
                <i class="fas fa-clock"></i>
                Pendientes
              </button>
              <button class="filtro-asesoria" data-filtro="confirmada">
                <i class="fas fa-check-circle"></i>
                Confirmadas
              </button>
              <button class="filtro-asesoria" data-filtro="en-progreso">
                <i class="fas fa-play-circle"></i>
                En Progreso
              </button>
              <button class="filtro-asesoria" data-filtro="completada">
                <i class="fas fa-flag-checkered"></i>
                Completadas
              </button>
              <button class="filtro-asesoria" data-filtro="cancelada">
                <i class="fas fa-times-circle"></i>
                Canceladas
              </button>
            </div>
          </nav>

          <!-- Contenedor principal de asesorías -->
          <section class="asesorias-content">
            <div id="asesorias-container" class="asesorias-grid">
              <!-- Las asesorías se cargarán aquí dinámicamente -->
              <div class="loading-container">
                <i class="fas fa-spinner fa-spin"></i>
                <p>Cargando tus asesorías...</p>
              </div>
            </div>
          </section>

        </section>
      </div>
    </main>

    <!-- Modal de detalles de asesoría -->
    <div id="modal-detalles" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <h2>
            <i class="fas fa-info-circle"></i>
            Detalles de la Asesoría
          </h2>
          <span class="close">&times;</span>
        </div>

        <div class="modal-body">
          <div id="detalles-content">
            <!-- El contenido se cargará dinámicamente -->
          </div>
        </div>

        <div class="modal-footer">
          <button class="btn btn-outline" onclick="document.getElementById('modal-detalles').style.display='none'">
            <i class="fas fa-times"></i>
            Cerrar
          </button>
        </div>
      </div>
    </div>

    <!-- Modal de confirmación -->
    <div id="modal-confirmacion" class="modal">
      <div class="modal-content small">
        <div class="modal-header">
          <h3 id="confirm-title">Confirmar acción</h3>
          <span class="close" onclick="cerrarModalConfirmacion()">&times;</span>
        </div>

        <div class="modal-body">
          <p id="confirm-message">¿Estás seguro de que quieres realizar esta acción?</p>
          <div id="confirm-input-container" style="display: none;">
            <label for="confirm-input">Motivo (opcional):</label>
            <textarea id="confirm-input" placeholder="Escribe el motivo..."></textarea>
          </div>
        </div>

        <div class="modal-footer">
          <button id="confirm-cancel" class="btn btn-outline" onclick="cerrarModalConfirmacion()">
            <i class="fas fa-times"></i>
            Cancelar
          </button>
          <button id="confirm-action" class="btn btn-primary">
            <i class="fas fa-check"></i>
            Confirmar
          </button>
        </div>
      </div>
    </div>

    <%- include('componentes/footer') %>

      <!-- Scripts JavaScript -->
      <script src="/assets/js/common.js"></script>
      <script src="/assets/js/misAsesorias.js"></script>
</body>

</html>
