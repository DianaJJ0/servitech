<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Gestión de Clientes - Servitech Admin</title>
  <link rel="stylesheet" href="/assets/css/administrador.css" />
  <link rel="stylesheet" href="/assets/css/admin.css" />
  <!-- admin-responsive.css retirado: reglas migradas a hojas por página -->
  <link rel="stylesheet" href="/assets/css/admin-components.css" />
  <!-- page-specific CSS -->
  <link rel="stylesheet" href="/assets/css/admin-clientes.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
</head>

<body>
  <div class="admin-layout">
    <%- include('../componentes/navbarAdmin.ejs') %>
      <main class="admin-main">
        <header class="admin-header">
          <div class="header-search">
            <i class="fas fa-search"></i>
            <input type="text" id="inputBuscarCliente" placeholder="Buscar clientes..." />
          </div>
          <div class="header-actions">
            <div class="notification-icon">
              <i class="fas fa-bell"></i>
              <span class="notification-badge">5</span>
            </div>
            <div class="admin-profile">
              <img src="https://i.pravatar.cc/150?img=11" alt="Admin profile" class="profile-img" />
              <div class="profile-info">
                <span class="profile-name">Admin ServiTech</span>
                <span class="profile-role">Administrador</span>
              </div>
              <i class="fas fa-chevron-down"></i>
            </div>
          </div>
        </header>
        <div class="admin-content">
          <div class="page-header">
            <h1>Gestión de Clientes</h1>
            <div class="page-actions">
              <button class="btn-primary" id="btnAddClient">
                <i class="fas fa-plus"></i>
                <span>Nuevo cliente</span>
              </button>
              <button class="btn-outline">
                <i class="fas fa-file-export"></i>
                <span>Exportar</span>
              </button>
            </div>
          </div>
          <div class="clientes-grid">
            <div class="table-container clientes-grid__tabla">
              <table class="admin-table" id="tablaClientes">
                <thead>
                  <tr>
                    <th>
                      <input type="checkbox" id="selectAllClientes" class="clientes-checkbox" />
                    </th>
                    <th>Foto</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <!-- Las filas se renderizan dinámicamente con JS -->
                </tbody>
              </table>
              <div class="clientes-paginacion">
                <span class="clientes-paginacion__info" id="clientesPaginacionInfo"></span>
                <div class="clientes-paginacion__controles" id="clientesPaginacionControles">
                  <!-- Paginación dinámica -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
  </div>

  <!-- Modal agregar cliente -->
  <div id="modalAgregarCliente" class="modal-cliente">
    <div class="modal-cliente__content">
      <div class="modal-cliente__header">
        <h2 class="modal-cliente__title">Agregar nuevo cliente</h2>
        <button class="btn-close"><i class="fas fa-times"></i></button>
      </div>
      <div class="modal-cliente__body">
        <form id="formAgregarCliente">
          <div class="modal-cliente__grid">
            <div>
              <label class="modal-cliente__label">Nombre</label>
              <input type="text" id="agregarNombreCliente" class="modal-cliente__input" required />
            </div>
            <div>
              <label class="modal-cliente__label">Apellido</label>
              <input type="text" id="agregarApellidoCliente" class="modal-cliente__input" required />
            </div>
            <div>
              <label class="modal-cliente__label">Correo</label>
              <input type="email" id="agregarCorreoCliente" class="modal-cliente__input" required />
            </div>
            <div>
              <label class="modal-cliente__label">Estado</label>
              <select id="agregarEstadoCliente" class="modal-cliente__input">
                <option value="activo">Activo</option>
                <option value="inactivo">Inactivo</option>
                <option value="suspendido">Suspendido</option>
              </select>
            </div>
            <div>
              <label class="modal-cliente__label">Foto (URL)</label>
              <input type="url" id="agregarFotoCliente" class="modal-cliente__input" placeholder="https://..." />
            </div>
          </div>
        </form>
      </div>
      <div class="modal-cliente__footer">
        <button type="button" class="btn-outline modal-cliente-agregar-cancelar">Cancelar</button>
        <button class="btn-primary" type="submit" form="formAgregarCliente">Guardar cliente</button>
      </div>
    </div>
  </div>

  <!-- Modal Editar Cliente -->
  <div id="modalEditarCliente" class="modal-cliente">
    <div class="modal-cliente__content">
      <div class="modal-cliente__header">
        <h2 class="modal-cliente__title">Editar cliente</h2>
        <button class="btn-close"><i class="fas fa-times"></i></button>
      </div>
      <div class="modal-cliente__body">
        <form id="formEditarCliente">
          <div class="modal-cliente__grid">
            <div>
              <label class="modal-cliente__label">Nombre</label>
              <input type="text" id="editarNombreCliente" class="modal-cliente__input" />
            </div>
            <div>
              <label class="modal-cliente__label">Apellido</label>
              <input type="text" id="editarApellidoCliente" class="modal-cliente__input" />
            </div>
            <div>
              <label class="modal-cliente__label">Correo</label>
              <input type="email" id="editarCorreoCliente" class="modal-cliente__input" />
            </div>
            <div>
              <label class="modal-cliente__label">Estado</label>
              <select id="editarEstadoCliente" class="modal-cliente__input">
                <option value="activo">Activo</option>
                <option value="inactivo">Inactivo</option>
                <option value="suspendido">Suspendido</option>
              </select>
            </div>
            <div>
              <label class="modal-cliente__label">Foto (URL)</label>
              <input type="url" id="editarFotoCliente" class="modal-cliente__input" />
            </div>
          </div>
        </form>
      </div>
      <div class="modal-cliente__footer">
        <button type="button" class="btn-outline modal-cliente-cancelar">Cancelar</button>
        <button class="btn-primary" type="submit" form="formEditarCliente">Guardar cambios</button>
      </div>
    </div>
  </div>

  <!-- Modal Ver Cliente -->
  <div id="modalVerCliente" class="modal-cliente">
    <div class="modal-cliente__content">
      <div class="modal-cliente__header">
        <h2 class="modal-cliente__title">Perfil del cliente</h2>
        <button class="btn-close"><i class="fas fa-times"></i></button>
      </div>
      <div class="modal-cliente__body">
        <form id="formVerCliente">
          <div class="modal-cliente__grid">
            <div>
              <label class="modal-cliente__label">Nombre</label>
              <input type="text" id="verNombreCliente" class="modal-cliente__input" disabled />
            </div>
            <div>
              <label class="modal-cliente__label">Apellido</label>
              <input type="text" id="verApellidoCliente" class="modal-cliente__input" disabled />
            </div>
            <div>
              <label class="modal-cliente__label">Correo</label>
              <input type="email" id="verCorreoCliente" class="modal-cliente__input" disabled />
            </div>
            <div>
              <label class="modal-cliente__label">Estado</label>
              <input type="text" id="verEstadoCliente" class="modal-cliente__input" disabled />
            </div>
            <div>
              <label class="modal-cliente__label">Foto (URL)</label>
              <input type="url" id="verFotoCliente" class="modal-cliente__input" disabled />
            </div>
          </div>
        </form>
      </div>
      <div class="modal-cliente__footer">
        <button type="button" class="btn-outline modal-cliente-ver-cerrar">Cerrar</button>
      </div>
    </div>
  </div>

  <!-- Modal Confirmación/Inactivar Cliente -->
  <%- include('../componentes/modalConfirmacion.ejs', { modalId: 'modalInactivarCliente' , modalClass: 'modal-cliente' ,
    titulo: 'Inactivar cliente' , nombre: '' , mensaje: '¿Está seguro que desea inactivar este cliente?' ,
    nota: 'El cliente <b>no se eliminará</b> de la base de datos, solo pasará a estado <b>inactivo</b>.' ,
    cancelarClass: 'modal-cliente-inactivar-cancelar' , confirmarClass: 'modal-cliente-inactivar-confirmar' ,
    textoAccion: 'Inactivar' }) %>

    <script src="/assets/js/admin/admin-clientes.js"></script>
    <script src="/assets/js/admin/admin-common.js"></script>
</body>

</html>
