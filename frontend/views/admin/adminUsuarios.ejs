<!--
  Archivo: admin/adminUsuarios.ejs
  Propósito: Interfaz de administración de usuarios/Clientes (crear, listar, paginación, roles).
  Variables EJS esperadas:
    - user: objeto admin (opcional)
  Dependencias CSS/JS:
    - /assets/css/admin-usuarios.css, /assets/css/admin-components.css
    - /assets/js/admin/admin-usuarios.js (fetch a /api/usuarios, paginación y formularios)
  Notas técnicas:
    - La tabla se carga dinámicamente via fetch; documentar puntos de integración con API.
-->

<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Gestión de Usuarios - Servitech Admin</title>
  <link rel="stylesheet" href="/assets/css/administrador.css" />
  <link rel="stylesheet" href="/assets/css/admin.css" />
  <!-- admin-responsive.css retirado: reglas migradas a hojas por página -->
  <link rel="stylesheet" href="/assets/css/admin-components.css" />
  <!-- page-specific CSS -->
  <link rel="stylesheet" href="/assets/css/admin-usuarios.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
</head>

<body>

  <div class="admin-layout">
    <%- include('../componentes/navbarAdmin.ejs') %>
      <main class="admin-main">
        <!-- Header con búsqueda y perfil -->
        <header class="admin-header">
          <div class="header-search">
            <i class="fas fa-search"></i>
            <input type="text" id="inputBuscarUsuario" placeholder="Buscar usuarios..." />
          </div>
          <div class="header-actions">
            <div class="notification-icon">
              <i class="fas fa-bell"></i>
              <span class="notification-badge">5</span>
            </div>
            <div class="admin-profile">
              <img src="https://i.pravatar.cc/150?img=11" alt="Admin profile" class="profile-img" />
              <div class="profile-info">
                <span class="profile-name">Admin ServiTech</span>
                <span class="profile-role">Administrador</span>
              </div>
              <i class="fas fa-chevron-down"></i>
            </div>
          </div>
        </header>

        <div class="admin-content">

          <!-- Título, Nuevo cliente, Exportar -->
          <div class="page-header">
            <h1>Gestión de clientes</h1>
            <div class="page-actions">
              <button class="btn-primary" id="btnAddUser">
                <i class="fas fa-plus"></i>
                <span>Nuevo cliente</span>
              </button>
              <button class="btn-outline">
                <i class="fas fa-file-export"></i>
                <span>Exportar</span>
              </button>
            </div>
          </div>

          <!-- Filtros y tabla de usuarios -->
          <div class="clientes-grid">
            <!-- Tabla de usuarios -->
            <div class="table-container">
              <div class="clientes-list">
                <table class="admin-table">
                  <thead>
                    <tr>
                      <th>Usuario</th>
                      <th>Email</th>
                      <th>Rol</th>
                      <th>Estado</th>
                      <th>Acciones</th>
                    </tr>
                  </thead>
                  <tbody id="usuarios-tbody">
                    <!-- Los usuarios serán cargados dinámicamente via fetch a /api/usuarios -->
                    <tr id="usuarios-loading-row">
                      <td colspan="5">Cargando usuarios...</td>
                    </tr>
                  </tbody>
                </table>
              </div>


              <!-- Paginación -->
              <div class="admin-pagination">
                <div id="usuarios-pagination" class="admin-pagination__pages"></div>
                <div class="usuarios-page-size-wrap">
                  <label class="usuarios-page-size-label">Filas por página</label>
                  <select id="usuarios-page-size">
                    <option value="5">5</option>
                    <option value="10" selected>10</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
  </div>



  <!-- Modal Nuevo Cliente -->
  <div id="modalCreateUser" class="admin-modal">
    <div class="admin-modal__backdrop"></div>
    <div class="admin-modal__dialog">
      <header class="admin-modal__header">
        <h3>Nuevo cliente</h3>
        <button class="admin-modal__close" data-close>&times;</button>
      </header>
      <div class="admin-modal__body">
        <form id="formCreateUser">
          <div class="form-group">
            <label for="create-nombre">Nombre</label>
            <input type="text" id="create-nombre" name="nombre" required pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ ]+"
              inputmode="text" maxlength="80" />
            <ul id="createNombreCriteria" class="nombre-criteria-list"
              style="display:none; margin:6px 0 0 0; padding-left:18px;">
              <li id="createNombreLettersCriteria"><span class="nombre-criteria-icon"></span> Solo letras y espacios
              </li>
              <li id="createNombreMinCriteria"><span class="nombre-criteria-icon"></span> Mínimo 2 caracteres</li>
              <li id="createNombreTrimCriteria"><span class="nombre-criteria-icon"></span> Sin espacios al inicio o
                final</li>
            </ul>
            <p class="error-message" id="create-nombre-error"></p>
          </div>
          <div class="form-group">
            <label for="create-apellido">Apellido</label>
            <input type="text" id="create-apellido" name="apellido" pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ ]+" inputmode="text"
              maxlength="80" />
            <ul id="createApellidoCriteria" class="apellido-criteria-list"
              style="display:none; margin:6px 0 0 0; padding-left:18px;">
              <li id="createApellidoLettersCriteria"><span class="apellido-criteria-icon"></span> Solo letras y espacios
              </li>
              <li id="createApellidoMinCriteria"><span class="apellido-criteria-icon"></span> Mínimo 2 caracteres</li>
              <li id="createApellidoTrimCriteria"><span class="apellido-criteria-icon"></span> Sin espacios al inicio o
                final</li>
            </ul>
            <p class="error-message" id="create-apellido-error"></p>
          </div>
          <div class="form-group">
            <label for="create-email">Email</label>
            <input type="email" id="create-email" name="email" required />
            <ul id="createEmailCriteria" class="email-criteria-list"
              style="display:none; margin:6px 0 0 0; padding-left:18px;">
              <li id="createEmailValidCriteria"><span class="email-criteria-icon"></span> Formato de email válido</li>
              <li id="createEmailDomainCriteria"><span class="email-criteria-icon"></span> Dominio permitido (no
                temporal)</li>
            </ul>
          </div>
          <div class="form-group">
            <label for="create-password">Contraseña</label>
            <div class="password-input-wrap" style="display:flex; align-items:center; gap:8px;">
              <input type="password" id="create-password" name="password" required minlength="8" />
              <button type="button" id="create-password-toggle" class="password-toggle"
                aria-label="Mostrar contraseña"><i class="fas fa-eye"></i></button>
            </div>
            <p class="error-message" id="create-password-error"></p>
            <ul class="password-requirements" id="createPasswordCriteria" style="margin-top:8px;">
              <li id="createMinLengthCriteria" class="invalid"><span class="pw-criteria-icon"></span>Mínimo 8 caracteres
              </li>
              <li id="createUppercaseCriteria" class="invalid"><span class="pw-criteria-icon"></span>Al menos una
                mayúscula</li>
              <li id="createLowercaseCriteria" class="invalid"><span class="pw-criteria-icon"></span>Al menos una
                minúscula</li>
              <li id="createNumberCriteria" class="invalid"><span class="pw-criteria-icon"></span>Al menos un número
              </li>
            </ul>
          </div>
          <div class="form-group">
            <label for="create-roles">Roles (coma separado)</label>
            <input type="text" id="create-roles" name="roles" placeholder="cliente,experto,admin" />
            <ul id="createRolesCriteria" class="roles-criteria-list"
              style="display:none; margin:6px 0 0 0; padding-left:18px;">
              <li id="createRolesValidCriteria"><span class="roles-criteria-icon"></span> Al menos un rol válido</li>
              <li id="createRolesAllowedCriteria"><span class="roles-criteria-icon"></span> Solo roles permitidos:
                cliente, experto, admin</li>
              <li id="createRolesNoSpacesCriteria"><span class="roles-criteria-icon"></span> Sin espacios extra ni comas
                al inicio/final</li>
            </ul>
          </div>
          <div class="form-group">
            <label for="create-estado">Estado</label>
            <select id="create-estado" name="estado">
              <option value="activo">Activo</option>
              <option value="inactivo">Inactivo</option>
              <option value="suspendido">Suspendido</option>
            </select>
          </div>
        </form>
      </div>
      <footer class="admin-modal__footer">
        <button class="btn-outline" data-close>Cancelar</button>
        <button class="btn-primary" id="btnCreateUser">Crear cliente</button>
      </footer>
    </div>
  </div>

  <!--Ver perfil-->
  <div id="modalViewUser" class="admin-modal">
    <div class="admin-modal__backdrop"></div>
    <div class="admin-modal__dialog">
      <header class="admin-modal__header">
        <h3>Ver perfil de usuario</h3>
        <button class="admin-modal__close" data-close>&times;</button>
      </header>
      <div class="admin-modal__body">
        <div class="view-user">
          <div class="view-user__header">
            <img id="view-avatar" src="" alt="Avatar" />
            <div class="view-user__info">
              <h4 id="view-nombre"></h4>
              <p id="view-email"></p>
            </div>
          </div>
          <div class="view-user__details">
            <div class="view-user__detail-group">
              <span class="view-user__detail-label">Roles</span>
              <span class="view-user__detail-value" id="view-roles"></span>
            </div>
            <div class="view-user__detail-group">
              <span class="view-user__detail-label">Estado</span>
              <span class="view-user__detail-value" id="view-estado"></span>
            </div>
          </div>
          <div id="view-infoExperto" style="display:none;">
            <h5>Información experto</h5>
            <p id="view-descripcion"></p>
            <p><strong>Categorías:</strong> <span id="view-categorias"></span></p>
          </div>
        </div>
      </div>
      <footer class="admin-modal__footer">
        <button class="btn-outline" data-close>Cerrar</button>
      </footer>
    </div>
  </div>

  <!-- Editar perfil -->
  <div id="modalEditUser" class="admin-modal">
    <div class="admin-modal__backdrop"></div>
    <div class="admin-modal__dialog">
      <header class="admin-modal__header">
        <h3>Editar perfil de usuario</h3>
        <button class="admin-modal__close" data-close>&times;</button>
      </header>
      <div class="admin-modal__body">
        <form id="formEditUser">
          <input type="hidden" id="edit-user-id" />
          <div class="form-group">
            <label>Nombre</label>
            <input type="text" id="edit-nombre" />
            <ul id="editNombreCriteria" class="nombre-criteria-list"
              style="display:none; margin:6px 0 0 0; padding-left:18px;">
              <li id="editNombreLettersCriteria"><span class="nombre-criteria-icon"></span> Solo letras y espacios</li>
              <li id="editNombreMinCriteria"><span class="nombre-criteria-icon"></span> Mínimo 2 caracteres</li>
              <li id="editNombreTrimCriteria"><span class="nombre-criteria-icon"></span> Sin espacios al inicio o final
              </li>
            </ul>
          </div>
          <div class="form-group">
            <label>Apellido</label>
            <input type="text" id="edit-apellido" />
            <ul id="editApellidoCriteria" class="apellido-criteria-list"
              style="display:none; margin:6px 0 0 0; padding-left:18px;">
              <li id="editApellidoLettersCriteria"><span class="apellido-criteria-icon"></span> Solo letras y espacios
              </li>
              <li id="editApellidoMinCriteria"><span class="apellido-criteria-icon"></span> Mínimo 2 caracteres</li>
              <li id="editApellidoTrimCriteria"><span class="apellido-criteria-icon"></span> Sin espacios al inicio o
                final</li>
            </ul>
          </div>
          <div class="form-group">
            <label>Email</label>
            <input type="email" id="edit-email" disabled />
            <ul id="editEmailCriteria" class="email-criteria-list"
              style="display:none; margin:6px 0 0 0; padding-left:18px;">
              <li id="editEmailValidCriteria"><span class="email-criteria-icon"></span> Formato de email válido</li>
              <li id="editEmailDomainCriteria"><span class="email-criteria-icon"></span> Dominio permitido (no temporal)
              </li>
            </ul>
          </div>
          <div class="form-group">
            <label>Roles (coma separado)</label>
            <input type="text" id="edit-roles" placeholder="cliente,experto,admin" />
            <ul id="editRolesCriteria" class="roles-criteria-list"
              style="display:none; margin:6px 0 0 0; padding-left:18px;">
              <li id="editRolesValidCriteria"><span class="roles-criteria-icon"></span> Al menos un rol válido</li>
              <li id="editRolesAllowedCriteria"><span class="roles-criteria-icon"></span> Solo roles permitidos:
                cliente, experto, admin</li>
              <li id="editRolesNoSpacesCriteria"><span class="roles-criteria-icon"></span> Sin espacios extra ni comas
                al inicio/final</li>
            </ul>
          </div>
          <div class="form-group">
            <label>Estado</label>
            <select id="edit-estado">
              <option value="activo">Activo</option>
              <option value="inactivo">Inactivo</option>
              <option value="suspendido">Suspendido</option>
            </select>
          </div>
        </form>
      </div>
      <footer class="admin-modal__footer">
        <button class="btn-outline" data-close>Cancelar</button>
        <button class="btn-primary" id="btnSaveEditUser">Guardar</button>
      </footer>
    </div>
  </div>

  <!-- Scripts para la funcionalidad de la página -->
  <script src="/assets/js/admin/admin-common.js"></script>
  <script src="/assets/js/password-utils.js"></script>
  <script src="/assets/js/admin/admin-usuarios.js"></script>

</body>

</html>
