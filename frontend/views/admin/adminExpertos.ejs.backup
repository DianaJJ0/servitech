<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Gestión de Expertos - Servitech Admin</title>
  <!-- Cargar estilos base y luego los específicos del panel admin (orden importante) -->
  <link rel="stylesheet" href="/assets/css/base.css" />
  <link rel="stylesheet" href="/assets/css/admin.css" />
  <!-- Estilos específicos del panel: componentes y experto -->
  <link rel="stylesheet" href="/assets/css/admin-components.css" />
  <link rel="stylesheet" href="/assets/css/Admin-expertos.css" />
  <!-- Choices.js styles for enhanced multi-selects -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css" />
  <!-- Responsive último para que sus media queries tengan prioridad sobre reglas de componentes/página -->
  <link rel="stylesheet" href="/assets/css/admin-responsive.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
</head>

<body>
  <script>
    // Protección temprana: ocultar cualquier modal que el servidor haya renderizado visible
    try {
      (function () {
        var mods = document.querySelectorAll && document.querySelectorAll('.modal-expert');
        if (mods && mods.length) {
          for (var i = 0; i < mods.length; i++) { try { mods[i].style.display = 'none'; mods[i].setAttribute('aria-hidden', 'true'); } catch (e) { } }
        }
        try { document.body.style.overflow = document.body.style.overflow || ''; } catch (e) { }
      })();
    } catch (e) { }
  </script>

  <div class="admin-layout">
    <%- include('../componentes/navbarAdmin.ejs') %>

      <script id="initial-expertos" type="application/json"><%= JSON.stringify(initialExpertos || []) %></script>

      <main class="admin-main">
        <!-- Contenido principal -->
        <header class="admin-header">
          <div class="admin-content-wrapper">
            <div class="header-search">
              <i class="fas fa-search"></i>
              <input type="text" placeholder="Buscar expertos..." />
            </div>
            <div class="header-actions">
              <div class="notification-icon">
                <i class="fas fa-bell"></i>
                <span class="notification-badge">5</span>
              </div>
              <div class="admin-profile">
                <img src="https://i.pravatar.cc/150?img=11" alt="Admin profile" class="profile-img" />
                <div class="profile-info">
                  <span class="profile-name">Admin ServiTech</span>
                  <span class="profile-role">Administrador</span>
                </div>
                <i class="fas fa-chevron-down"></i>
              </div>
            </div>
          </div>
        </header>

        <div class="admin-content">

          <!-- Título y acciones principales -->
          <div class="page-header">
            <h1>Gestión de Expertos</h1>
            <div class="page-actions">
              <button type="button" class="btn-primary" id="btnAddExpert">
                <i class="fas fa-plus"></i>
                <span>Nuevo experto</span>
              </button>
              <button class="btn-outline">
                <i class="fas fa-file-export"></i>
                <span>Exportar</span>
              </button>
            </div>
          </div>

          <!-- Modernized filtros, estadísticas, tabla y paginación -->

          <div class="expertos-grid">
            <aside class="expertos-card expertos-grid__filters" aria-label="Filtros y estadísticas">
              <div class="expertos-filtros">
                <h3 class="expertos-filtros__title">Filtros</h3>

                <div class="expertos-filtros__group">
                  <label class="expertos-filtros__label" for="filterEstado">Estado</label>
                  <select class="expertos-filtros__select" id="filterEstado">
                    <option value="">Todos los estados</option>
                    <option value="active">Activos</option>
                    <option value="pending">Pendientes</option>
                    <option value="inactive">Inactivos</option>
                  </select>
                </div>

                <div class="expertos-filtros__group">
                  <label class="expertos-filtros__label" for="filterCategoria">Categoría</label>
                  <select class="expertos-filtros__select" id="filterCategoria">
                    <option value="">Todas las categorías</option>
                    <% if (typeof categorias !=='undefined' && Array.isArray(categorias)) { %>
                      <% categorias.forEach(function(c){ %>
                        <option value="<%= c._id %>">
                          <%= c.nombre || c.name %>
                        </option>
                        <% }) %>
                          <% } %>
                  </select>
                </div>

                <div class="expertos-filtros__group">
                  <label class="expertos-filtros__label" for="filterRating">Calificación mínima</label>
                  <select class="expertos-filtros__select" id="filterRating">
                    <option value="">Todas las calificaciones</option>
                    <option value="5">5 estrellas</option>
                    <option value="4">4+ estrellas</option>
                    <option value="3">3+ estrellas</option>
                    <option value="2">2+ estrellas</option>
                  </select>
                </div>

                <button class="btn-primary expertos-filtros__btn" id="applyFiltersBtn">
                  <i class="fas fa-filter" aria-hidden="true"></i>
                  <span>Aplicar filtros</span>
                </button>
              </div>

              <div class="expertos-estadisticas" style="margin-top:1rem;">
                <h3 class="expertos-estadisticas__title">Estadísticas</h3>
                <div class="expertos-estadisticas__list">
                  <div class="expertos-estadisticas__item">
                    <div class="expertos-estadisticas__item-info">
                      <i class="fas fa-user-tie expertos-estadisticas__icon" aria-hidden="true"></i>
                      <span>Total Expertos</span>
                    </div>
                    <span class="expertos-estadisticas__value">128</span>
                  </div>

                  <div class="expertos-estadisticas__item">
                    <div class="expertos-estadisticas__item-info">
                      <i class="fas fa-check-circle expertos-estadisticas__icon" aria-hidden="true"></i>
                      <span>Activos</span>
                    </div>
                    <span class="expertos-estadisticas__value">98</span>
                  </div>

                  <div class="expertos-estadisticas__item">
                    <div class="expertos-estadisticas__item-info">
                      <i class="fas fa-clock expertos-estadisticas__icon" aria-hidden="true"></i>
                      <span>Pendientes</span>
                    </div>
                    <span class="expertos-estadisticas__value">22</span>
                  </div>

                  <div class="expertos-estadisticas__item">
                    <div class="expertos-estadisticas__item-info">
                      <i class="fas fa-star expertos-estadisticas__icon" aria-hidden="true"></i>
                      <span>Promedio</span>
                    </div>
                    <span class="expertos-estadisticas__value">4.7</span>
                  </div>
                </div>
              </div>
            </aside>

            <section class="expertos-card expertos-grid__tabla" aria-label="Tabla de expertos">
              <table class="admin-table" role="table" aria-label="Lista de expertos">
                <thead>
                  <tr>
                    <th style="width:40px;">
                      <input type="checkbox" id="selectAll" class="expertos-checkbox" />
                    </th>
                    <th>Experto</th>
                    <th>Categorías</th>
                    <th>Especialidad</th>
                    <th>Registro</th>
                    <th>Sesiones</th>
                    <th>Calificación</th>
                    <th>Estado</th>
                    <th style="width:160px;">Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <tr class="placeholder-row">
                    <td colspan="9" style="text-align:center;padding:24px;color:var(--admin-text-secondary);">
                      Cargando expertos...
                    </td>
                  </tr>
                </tbody>
              </table>

              <!-- Paginación (ubicada directamente bajo la tabla para asociación semántica y visual) -->
              <div class="expertos-paginacion" role="navigation" aria-label="Paginación de expertos">
                <span class="expertos-paginacion__info">Mostrando 1-7 de 128 expertos</span>
                <div class="expertos-paginacion__controles" aria-hidden="false">
                  <button class="expertos-paginacion__btn expertos-paginacion__btn--disabled" aria-disabled="true">
                    <i class="fas fa-chevron-left" aria-hidden="true"></i>
                  </button>
                  <button class="expertos-paginacion__btn expertos-paginacion__btn--active"
                    aria-current="page">1</button>
                  <button class="expertos-paginacion__btn">2</button>
                  <button class="expertos-paginacion__btn">3</button>
                  <span class="expertos-paginacion__ellipsis">…</span>
                  <button class="expertos-paginacion__btn">18</button>
                  <button class="expertos-paginacion__btn">
                    <i class="fas fa-chevron-right" aria-hidden="true"></i>
                  </button>
                </div>
              </div>
            </section>
          </div>
        </div>
      </main>
  </div>


  <style>
    /* ============================
     Variables (usar las definidas en :root)
     ============================ */

    /* ============================
     Contenedor del modal (fondo y centrado)
     ============================ */
    #expertModal.modal-expert,
    #editExpertModal.modal-expert {
      position: fixed;
      inset: 0;
      display: none;
      align-items: center;
      justify-content: center;
      /* capa oscura de fondo para foco visual */
      background: rgba(4, 8, 16, 0.6);
      z-index: 1100;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    /* ============================
     Caja interna del modal
     ============================ */
    #expertModal .modal-expert__container,
    #editExpertModal .modal-expert__container {
      width: 960px;
      max-width: calc(100% - 40px);
      max-height: calc(100% - 80px);
      background: var(--admin-card-bg);
      color: var(--admin-text-primary);
      border-radius: 12px;
      box-shadow: var(--admin-shadow);
      overflow: hidden;
      display: flex;
      flex-direction: column;
      border: 1px solid var(--admin-border-color);
    }

    /* ============================
     Header del modal
     ============================ */
    #expertModal .modal-expert__header,
    #editExpertModal .modal-expert__header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1rem 1.25rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.03);
      background: linear-gradient(180deg, rgba(255, 255, 255, 0.01), transparent);
    }

    #expertModal .modal-expert__title,
    #editExpertModal .modal-expert__title {
      margin: 0;
      font-size: 1.15rem;
      font-weight: 600;
      color: var(--admin-text-primary);
    }

    #expertModal .btn-close,
    #editExpertModal .btn-close {
      background: transparent;
      border: none;
      color: var(--admin-text-secondary);
      font-size: 1rem;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 6px;
      border-radius: 6px;
      cursor: pointer;
    }

    #expertModal .btn-close,
    #editExpertModal .btn-close:hover {
      color: var(--admin-text-primary);
      background: rgba(255, 255, 255, 0.02);
    }

    /* ============================
     Body del modal (scrollable)
     ============================ */
    #expertModal .modal-expert__body,
    #editExpertModal .modal-expert__body {
      padding: 1rem 1.25rem;
      overflow: auto;
    }

    /* ============================
     Grid de formulario (responsivo)
     ============================ */
    #expertModal .modal-expert__grid,
    #editExpertModal .modal-expert__grid {
      display: grid;
      grid-template-columns: repeat(2, minmax(220px, 1fr));
      gap: 1rem;
      align-items: start;
    }

    /* que las filas marcadas full-width ocupen todo el ancho del grid */
    #expertModal .modal-expert__grid,
    #editExpertModal .modal-expert__grid .full-width {
      grid-column: 1 / -1;
    }

    /* ============================
     Labels e Inputs generales
     ============================ */
    #expertModal .modal-expert__label,
    #editExpertModal .modal-expert__label {
      display: block;
      font-size: 0.875rem;
      color: var(--admin-text-secondary);
      margin-bottom: 0.35rem;
    }

    #expertModal .modal-expert__icon,
    #editExpertModal .modal-expert__icon {
      margin-right: 0.5rem;
      color: var(--admin-accent-color);
      width: 1rem;
    }

    #expertModal .modal-expert__input,
    #editExpertModal .modal-expert__input,
    #expertModal input.modal-expert__input,
    #editExpertModal input.modal-expert__input,
    #expertModal select.modal-expert__input,
    #editExpertModal select.modal-expert__input,
    #expertModal textarea.modal-expert__input,
    #editExpertModal textarea.modal-expert__input {
      width: 100%;
      box-sizing: border-box;
      padding: 0.5rem 0.75rem;
      background: transparent;
      border: 1px solid var(--admin-border-color);
      color: var(--admin-text-primary);
      border-radius: 8px;
      font-size: 0.95rem;
      outline: none;
    }

    #expertModal textarea.modal-expert__textarea,
    #editExpertModal textarea.modal-expert__textarea {
      min-height: 96px;
      resize: vertical;
    }

    #expertModal .modal-expert__input,
    #editExpertModal .modal-expert__input:focus {
      border-color: var(--admin-accent-color);
      box-shadow: 0 6px 18px rgba(58, 142, 255, 0.08);
    }

    #expertModal .modal-expert__hint,
    #editExpertModal .modal-expert__hint,
    #expertModal .hint,
    #editExpertModal .hint,
    #expertModal .srv-note,
    #editExpertModal .srv-note {
      display: block;
      margin-top: 0.35rem;
      font-size: 0.82rem;
      color: var(--admin-text-secondary);
    }

    /* ============================
     Precio por hora (input con símbolo)
     ============================ */
    #expertModal .srv-price-input,
    #editExpertModal .srv-price-input,
    #expertModal .price-input,
    #editExpertModal .price-input {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      background: rgba(255, 255, 255, 0.02);
      padding: 0.25rem;
      border-radius: 8px;
      border: 1px solid var(--admin-border-color);
    }

    #expertModal .srv-currency,
    #editExpertModal .srv-currency,
    #expertModal .currency-symbol,
    #editExpertModal .currency-symbol {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      min-width: 36px;
      height: 36px;
      font-weight: 700;
      color: var(--admin-text-primary);
      background: rgba(255, 255, 255, 0.02);
      border-radius: 6px;
      padding: 0 6px;
    }

    #expertModal input.price-field,
    #editExpertModal input.price-field {
      border: none;
      background: transparent;
      color: var(--admin-text-primary);
      font-size: 1rem;
      padding: 0.35rem 0;
      outline: none;
    }

    /* ============================
     Selector de días (botones)
     ============================ */
    #expertModal .srv-days-wrapper,
    #editExpertModal .srv-days-wrapper {
      display: flex;
      gap: 0.75rem;
      align-items: center;
      flex-direction: column;
    }

    #expertModal .srv-days,
    #editExpertModal .srv-days {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    #expertModal .srv-day,
    #editExpertModal .srv-day {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      min-width: 40px;
      border-radius: 8px;
      background: transparent;
      border: 1px solid var(--admin-border-color);
      color: var(--admin-text-primary);
      cursor: pointer;
      font-weight: 600;
      transition: background 120ms ease, transform 80ms ease;
    }

    #expertModal .srv-day,
    #editExpertModal .srv-day:hover {
      transform: translateY(-1px);
      background: rgba(255, 255, 255, 0.02);
    }

    #expertModal .srv-day.selected,
    #editExpertModal .srv-day.selected,
    #expertModal .srv-day,
    #editExpertModal .srv-day[aria-pressed="true"] {
      background: linear-gradient(180deg, var(--admin-accent-color), var(--admin-accent-secondary));
      color: #0b1220;
      border-color: transparent;
    }

    #expertModal .srv-days-display,
    #editExpertModal .srv-days-display {
      font-size: 0.85rem;
      color: var(--admin-text-secondary);
      margin-top: 0.25rem;
    }

    /* ============================
     Upload de imagen (input oculto + caja visual)
     ============================ */
    #expertModal .modal-expert__file-input,
    #editExpertModal .modal-expert__file-input {
      position: absolute;
      left: -9999px;
      width: 1px;
      height: 1px;
      overflow: hidden;
      opacity: 0;
      pointer-events: none;
    }

    #expertModal .modal-expert__upload-box,
    #editExpertModal .modal-expert__upload-box {
      display: inline-flex;
      align-items: center;
      gap: 0.6rem;
      width: 100%;
      padding: 0.9rem;
      border-radius: 10px;
      border: 1px dashed var(--admin-border-color);
      color: var(--admin-text-secondary);
      background: rgba(255, 255, 255, 0.01);
      cursor: pointer;
      user-select: none;
    }

    #expertModal .modal-expert__upload-box,
    #editExpertModal .modal-expert__upload-box i {
      color: var(--admin-accent-color);
    }

    #expertModal .modal-expert__upload-box,
    #editExpertModal .modal-expert__upload-box:hover {
      border-color: var(--admin-accent-color);
      color: var(--admin-text-primary);
    }

    #expertModal,
    #editExpertModal #profilePreview {
      margin-top: 0.6rem;
      display: none;
      position: relative;
      width: 76px;
      height: 76px;
      border-radius: 8px;
      overflow: hidden;
      background: rgba(255, 255, 255, 0.02);
      border: 1px solid var(--admin-border-color);
    }

    #expertModal,
    #editExpertModal #profilePreview.visible,
    #expertModal,
    #editExpertModal #profilePreview[aria-hidden="false"] {
      display: block;
    }

    #expertModal,
    #editExpertModal #profilePreview img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }

    #expertModal,
    #editExpertModal #removeProfileBtn {
      position: absolute;
      top: 6px;
      right: 6px;
      background: rgba(0, 0, 0, 0.5);
      color: #fff;
      border: none;
      border-radius: 6px;
      width: 26px;
      height: 26px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
    }

    /* feedback y meta */
    #expertModal .upload-meta,
    #editExpertModal .upload-meta {
      margin-top: 0.35rem;
      font-size: 0.82rem;
      color: var(--admin-text-secondary);
    }

    #expertModal .upload-error,
    #editExpertModal .upload-error {
      margin-top: 0.35rem;
      color: #ff7b7b;
      font-size: 0.85rem;
    }

    /* ============================
     Toggle mostrar número de cuenta
     ============================ */
    #expertModal .acct-wrap,
    #editExpertModal .acct-wrap {
      display: flex;
      gap: 0.5rem;
      align-items: center;
    }

    #expertModal .acct-input,
    #editExpertModal .acct-input {
      flex: 1;
      padding: 0.5rem 0.75rem;
      border-radius: 8px;
      border: 1px solid var(--admin-border-color);
      background: transparent;
      color: var(--admin-text-primary);
      outline: none;
    }

    #expertModal .acct-toggle,
    #editExpertModal .acct-toggle {
      background: transparent;
      border: 1px solid var(--admin-border-color);
      color: var(--admin-text-secondary);
      padding: 0.45rem 0.6rem;
      border-radius: 8px;
      cursor: pointer;
    }

    #expertModal .acct-toggle,
    #editExpertModal .acct-toggle:hover {
      color: var(--admin-text-primary);
      border-color: var(--admin-accent-color);
    }

    /* ============================
     Sección bancaria (tarjeta)
     ============================ */
    #expertModal .bank-section,
    #editExpertModal .bank-section {
      background: linear-gradient(180deg, rgba(255, 255, 255, 0.01), transparent);
      border: 1px solid rgba(255, 255, 255, 0.02);
      padding: 0.9rem;
      border-radius: 10px;
    }

    #expertModal .bank-grid,
    #editExpertModal .bank-grid {
      display: grid;
      grid-template-columns: repeat(2, minmax(200px, 1fr));
      gap: 0.75rem;
      margin-top: 0.75rem;
    }

    #expertModal .bank-grid,
    #editExpertModal .bank-grid .full-width {
      grid-column: 1 / -1;
    }

    #expertModal .info-box,
    #editExpertModal .info-box {
      margin-top: 0.75rem;
      padding: 0.65rem;
      border-radius: 8px;
      background: rgba(255, 255, 255, 0.01);
      border: 1px solid rgba(255, 255, 255, 0.02);
      color: var(--admin-text-secondary);
      font-size: 0.9rem;
    }

    /* ============================
     Footer del modal (botones)
     ============================ */
    #expertModal .modal-expert__footer,
    #editExpertModal .modal-expert__footer {
      display: flex;
      gap: 0.75rem;
      justify-content: flex-end;
      padding: 0.9rem 1.25rem;
      border-top: 1px solid rgba(255, 255, 255, 0.03);
      background: linear-gradient(0deg, rgba(255, 255, 255, 0.01), transparent);
    }

    /* estilos básicos de botones (si no vienen de archivos globales) */
    #expertModal .btn-primary,
    #editExpertModal .btn-primary {
      background: linear-gradient(180deg, var(--admin-accent-color), var(--admin-accent-secondary));
      color: #071426;
      border: none;
      padding: 0.6rem 0.9rem;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
    }

    #expertModal .btn-outline,
    #editExpertModal .btn-outline {
      background: transparent;
      color: var(--admin-text-primary);
      border: 1px solid var(--admin-border-color);
      padding: 0.55rem 0.9rem;
      border-radius: 8px;
      cursor: pointer;
    }

    #expertModal .btn-primary,
    #editExpertModal .btn-primary:hover {
      filter: brightness(1.03);
    }

    #expertModal .btn-outline,
    #editExpertModal .btn-outline:hover {
      border-color: var(--admin-accent-color);
      color: var(--admin-text-primary);
    }

    /* ============================
     Styles específicos para Choices.js dentro del modal
     Asegurar visibilidad y contraste con el tema oscuro
     ============================ */

    /* contenedor interior */
    #expertModal .choices__inner,
    #editExpertModal .choices__inner {
      background: transparent !important;
      border: none !important;
      padding: 0 !important;
      min-height: 40px !important;
      display: flex;
      align-items: center;
      gap: 6px;
    }

    /* chips/items seleccionados */
    #expertModal .choices__list--multiple,
    #editExpertModal .choices__list--multiple .choices__item {
      background: rgba(255, 255, 255, 0.04) !important;
      color: var(--admin-text-primary) !important;
      border: 1px solid rgba(255, 255, 255, 0.03) !important;
