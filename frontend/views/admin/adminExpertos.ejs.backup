                  // Try to style existing inputs immediately and observe future clones
                  function processAll() {
                    document.querySelectorAll('#expertModal .choices__input,
  #editExpertModal.choices__input, #expertModal.choices__input--cloned,
                      #editExpertModal.choices__input--cloned, input[placeholder = "Selecciona categorías"], input[aria - label= "Selecciona categorías"]').forEach(applyInputFix);
