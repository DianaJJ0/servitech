<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Mensajes - Servitech Admin</title>
    <link rel="stylesheet" href="/assets/css/administrador.css">
    <link rel="stylesheet" href="/assets/css/admin.css">
    <!--<link rel="stylesheet" href="/assets/css/admin-responsive.css"> -->
    <link rel="stylesheet" href="/assets/css/admin-components.css">
    <link rel="stylesheet" href="/assets/css/admin-clientes.css" />
    <!-- page-specific CSS -->
    <!--<link rel="stylesheet" href="/assets/css/admin-mensajes.css">-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>
    <div class="admin-layout">
        <%- include('../componentes/navbarAdmin.ejs') %>
            <main class="admin-main">
                <header class="admin-header">
                    <div class="header-search">
                        <i class="fas fa-search"></i>
                        <input type="text" placeholder="Buscar mensajes...">
                    </div>
                    <div class="header-actions">
                        <div class="notification-icon">
                            <i class="fas fa-bell"></i>
                            <span class="notification-badge">5</span>
                        </div>
                        <div class="admin-profile">
                            <img src="https://i.pravatar.cc/150?img=11" alt="Admin profile" class="profile-img">
                            <div class="profile-info">
                                <span class="profile-name">Admin ServiTech</span>
                                <span class="profile-role">Administrador</span>
                            </div>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                    </div>
                </header>

                <div class="admin-content">
                    <div class="page-header">
                        <h1>Gestión de Mensajes</h1>
                        <div class="page-actions">
                            <button class="btn-primary" id="btnComposeMessage">
                                <i class="fas fa-plus"></i>
                                <span>Nuevo mensaje</span>
                            </button>
                            <button class="btn-outline">
                                <i class="fas fa-file-export"></i>
                                <span>Exportar</span>
                            </button>
                        </div>
                    </div>

                    <div class="admin-mensajes-grid admin-mensajes__main">
                        <div class="admin-mensajes__main-header">
                            <div class="admin-mensajes__main-header-left">
                                <input type="checkbox" id="selectAll" class="admin-mensajes__checkbox">
                                <button class="btn-icon admin-mensajes__main-btn">
                                    <i class="fas fa-chevron-down"></i>
                                </button>
                                <button class="btn-icon admin-mensajes__main-btn" title="Actualizar">
                                    <i class="fas fa-sync-alt"></i>
                                </button>
                                <button class="btn-icon admin-mensajes__main-btn" title="Archivar">
                                    <i class="fas fa-archive"></i>
                                </button>
                                <button class="btn-icon admin-mensajes__main-btn" title="Marcar como spam">
                                    <i class="fas fa-exclamation-triangle"></i>
                                </button>
                                <button class="btn-icon admin-mensajes__main-btn" title="Eliminar">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                            <div class="admin-mensajes__main-header-right">
                                <span class="admin-mensajes__main-header-info">1-7 de 18</span>
                                <div class="admin-mensajes__main-header-paginacion">
                                    <button
                                        class="admin-mensajes__main-header-paginacion-btn admin-mensajes__main-header-paginacion-btn--disabled">
                                        <i class="fas fa-chevron-left"></i>
                                    </button>
                                    <button class="admin-mensajes__main-header-paginacion-btn">
                                        <i class="fas fa-chevron-right"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="admin-mensajes__list">
                            <!-- Mensaje 1 -->
                            <div class="admin-mensajes__item admin-mensajes__item--unread">
                                <div class="admin-mensajes__item-checkbox">
                                    <input type="checkbox" id="msg1" class="admin-mensajes__checkbox">
                                </div>
                                <div class="admin-mensajes__item-star">
                                    <i class="far fa-star"></i>
                                </div>
                                <div class="admin-mensajes__item-remitente">
                                    <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="Remitente"
                                        class="admin-mensajes__item-remitente-img">
                                    <span class="admin-mensajes__item-remitente-nombre">Mario Velázquez</span>
                                </div>
                                <div class="admin-mensajes__item-content">
                                    <div class="admin-mensajes__item-title">Consulta sobre proyecto de desarrollo web
                                    </div>
                                    <div class="admin-mensajes__item-snippet">Hola, necesito información sobre los
                                        tiempos estimados para el proyecto de desarrollo que estamos...</div>
                                </div>
                                <div class="admin-mensajes__item-clip">
                                    <i class="fas fa-paperclip"></i>
                                </div>
                                <div class="admin-mensajes__item-fecha">12:45 PM</div>
                            </div>

                            <!-- Mensaje 2 -->
                            <div class="admin-mensajes__item admin-mensajes__item--unread">
                                <div class="admin-mensajes__item-checkbox">
                                    <input type="checkbox" id="msg2" class="admin-mensajes__checkbox">
                                </div>
                                <div class="admin-mensajes__item-star admin-mensajes__item-star--active">
                                    <i class="fas fa-star"></i>
                                </div>
                                <div class="admin-mensajes__item-remitente">
                                    <img src="https://randomuser.me/api/portraits/women/44.jpg" alt="Remitente"
                                        class="admin-mensajes__item-remitente-img">
                                    <span class="admin-mensajes__item-remitente-nombre">Ana García</span>
                                </div>
                                <div class="admin-mensajes__item-content">
                                    <div class="admin-mensajes__item-title">Actualizaciones de diseño para aplicación
                                    </div>
                                    <div class="admin-mensajes__item-snippet">Te envío los mockups actualizados para que
                                        los revises. Hice los cambios que solicitaste en la última reunión...</div>
                                </div>
                                <div class="admin-mensajes__item-clip">
                                    <i class="fas fa-paperclip"></i>
                                </div>
                                <div class="admin-mensajes__item-fecha">11:20 AM</div>
                            </div>

                            <!-- Los demás mensajes seguirían la misma estructura -->
                        </div>

                        <div class="admin-mensajes__footer">
                            <span class="admin-mensajes__footer-info">Mostrando 1-7 de 18 mensajes</span>
                            <div class="admin-mensajes__footer-paginacion">
                                <button
                                    class="admin-mensajes__footer-paginacion-btn admin-mensajes__footer-paginacion-btn--disabled">
                                    <i class="fas fa-chevron-left"></i>
                                </button>
                                <button
                                    class="admin-mensajes__footer-paginacion-btn admin-mensajes__footer-paginacion-btn--active">1</button>
                                <button class="admin-mensajes__footer-paginacion-btn">2</button>
                                <button class="admin-mensajes__footer-paginacion-btn">3</button>
                                <button class="admin-mensajes__footer-paginacion-btn">
                                    <i class="fas fa-chevron-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
    </div>

    <div id="composeModal" class="admin-mensajes__modal">
        <div class="admin-mensajes__modal-content">
            <div class="admin-mensajes__modal-header">
                <h2 class="admin-mensajes__modal-title">Nuevo mensaje</h2>
                <button class="btn-close"><i class="fas fa-times"></i></button>
            </div>
            <div class="admin-mensajes__modal-body">
                <form id="composeForm">
                    <div class="admin-mensajes__modal-group">
                        <label class="admin-mensajes__modal-label">Para</label>
                        <input type="text" id="messageTo" placeholder="Ingresa destinatarios"
                            class="admin-mensajes__modal-input">
                    </div>
                    <div class="admin-mensajes__modal-grid">
                        <div>
                            <label class="admin-mensajes__modal-label">CC</label>
                            <input type="text" id="messageCc" placeholder="Copia a" class="admin-mensajes__modal-input">
                        </div>
                        <div>
                            <label class="admin-mensajes__modal-label">CCO</label>
                            <input type="text" id="messageBcc" placeholder="Copia oculta a"
                                class="admin-mensajes__modal-input">
                        </div>
                    </div>
                    <div class="admin-mensajes__modal-group">
                        <label class="admin-mensajes__modal-label">Asunto</label>
                        <input type="text" id="messageSubject" placeholder="Asunto del mensaje"
                            class="admin-mensajes__modal-input">
                    </div>
                    <div class="admin-mensajes__modal-group">
                        <label class="admin-mensajes__modal-label">Mensaje</label>
                        <textarea id="messageBody" rows="10" placeholder="Escribe tu mensaje aquí"
                            class="admin-mensajes__modal-input admin-mensajes__modal-textarea"></textarea>
                    </div>
                    <div class="admin-mensajes__modal-group">
                        <label class="admin-mensajes__modal-label">Adjuntos</label>
                        <div class="admin-mensajes__modal-upload-wrapper">
                            <input type="file" id="messageAttachments" class="admin-mensajes__modal-file-input"
                                multiple>
                            <div class="admin-mensajes__modal-upload-box">
                                <i class="fas fa-paperclip"></i>
                                <span>Arrastra archivos o haz clic para seleccionar</span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="admin-mensajes__modal-footer">
                <button class="btn-outline" data-dismiss="modal">Descartar</button>
                <button class="btn-primary" id="sendMessage">Enviar mensaje</button>
            </div>
        </div>
    </div>

    <script src="/assets/js/admin/admin-mensajes.js"></script>
    <script src="/assets/js/admin/admin-common.js"></script>
</body>

</html>
