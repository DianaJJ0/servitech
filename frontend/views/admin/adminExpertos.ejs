  <style>
    /* ============================
       Variables: usar las definidas en :root (no redefinir)
       ============================ */

    /* ============================
       Layout principal de la sección de expertos
       ============================ */
    .expertos-grid {
      display: grid;
      grid-template-columns: 300px 1fr;
      /* sidebar + contenido */
      gap: 1.25rem;
      align-items: start;
    }

    /* contenedores tipo tarjeta compartidas */
    .expertos-card {
      background: var(--admin-card-bg);
      border: 1px solid var(--admin-border-color);
      border-radius: 12px;
      padding: 1rem;
      color: var(--admin-text-primary);
      box-shadow: var(--admin-shadow);
      box-sizing: border-box;
    }

    /* ============================
       FILTROS (sidebar)
       ============================ */
    .expertos-grid__filters {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      min-width: 220px;
    }

    .expertos-filtros__title {
      margin: 0;
      font-size: 1rem;
      font-weight: 600;
      color: var(--admin-text-primary);
      padding-bottom: 0.45rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.03);
    }

    .expertos-filtros {
      display: grid;
      gap: 0.75rem;
    }

    .expertos-filtros__group {
      display: flex;
      flex-direction: column;
      gap: 0.35rem;
    }

    .expertos-filtros__label {
      margin: 0;
      font-size: 0.86rem;
      color: var(--admin-text-secondary);
    }

    /* Select estilizado reutilizable */
    .expertos-filtros__select {
      width: 100%;
      padding: 0.5rem 0.75rem;
      background: transparent;
      border: 1px solid var(--admin-border-color);
      color: var(--admin-text-primary);
      border-radius: 8px;
      font-size: 0.95rem;
      outline: none;
      appearance: none;
      background-image:
        linear-gradient(45deg, transparent 50%, var(--admin-text-secondary) 50%),
        linear-gradient(135deg, var(--admin-text-secondary) 50%, transparent 50%);
      background-position: calc(100% - 18px) calc(1em + 2px), calc(100% - 13px) calc(1em + 2px);
      background-size: 6px 6px, 6px 6px;
      background-repeat: no-repeat;
      padding-right: 2.25rem;
    }

    .expertos-filtros__select:focus {
      border-color: var(--admin-accent-color);
      box-shadow: 0 6px 18px rgba(58, 142, 255, 0.08);
    }

    /* Botón primario de filtros */
    .expertos-filtros__btn {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      justify-content: center;
      padding: 0.55rem 0.85rem;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
      border: none;
      background: linear-gradient(180deg, var(--admin-accent-color), var(--admin-accent-secondary));
      color: #071426;
      box-shadow: 0 6px 18px rgba(58, 142, 255, 0.06);
      transition: transform 120ms ease, filter 120ms ease;
    }

    .expertos-filtros__btn:hover {
      transform: translateY(-2px);
      filter: brightness(1.03);
    }

    /* pequeñas ayudas de texto */
    .expertos-filtros small {
      color: var(--admin-text-secondary);
      font-size: 0.82rem;
    }

    /* ============================
       ESTADÍSTICAS (reutilizable dentro del sidebar)
       ============================ */
    .expertos-estadisticas {
      display: grid;
      gap: 0.6rem;
      margin-top: 0.25rem;
    }

    .expertos-estadisticas__title {
      margin: 0;
      font-size: 0.95rem;
      font-weight: 600;
      color: var(--admin-text-primary);
      padding-bottom: 0.45rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.03);
    }

    .expertos-estadisticas__list {
      display: grid;
      gap: 0.6rem;
      grid-template-columns: 1fr;
      margin-top: 0.5rem;
    }

    .expertos-estadisticas__item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 0.75rem;
      padding: 0.6rem;
      border-radius: 8px;
      background: linear-gradient(180deg, rgba(255, 255, 255, 0.01), transparent);
      border: 1px solid rgba(255, 255, 255, 0.02);
      color: var(--admin-text-secondary);
      font-size: 0.92rem;
    }

    .expertos-estadisticas__item-info {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .expertos-estadisticas__icon {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      min-width: 36px;
      height: 36px;
      border-radius: 8px;
      background: rgba(255, 255, 255, 0.02);
      color: var(--admin-accent-color);
      font-size: 1rem;
    }

    .expertos-estadisticas__value {
      font-weight: 700;
      color: var(--admin-text-primary);
      margin-left: 0.5rem;
    }

    /* ============================
       TABLA (contenido principal)
       ============================ */
    .expertos-grid__tabla {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    /* contenedor scroll para tablas largas en pantallas pequeñas */
    .expertos-table-wrapper {
      overflow: auto;
      border-radius: 10px;
      -webkit-overflow-scrolling: touch;
    }

    table.admin-table {
      width: 100%;
      border-collapse: collapse;
      min-width: 760px;
      /* permite scroll horizontal razonable */
      color: var(--admin-text-primary);
    }

    table.admin-table thead th {
      text-align: left;
      font-weight: 600;
      padding: 0.75rem 0.9rem;
      font-size: 0.88rem;
      color: var(--admin-text-secondary);
      border-bottom: 1px solid rgba(255, 255, 255, 0.03);
      background: transparent;
    }

    table.admin-table tbody td {
      padding: 0.75rem 0.9rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.02);
      vertical-align: middle;
      font-size: 0.92rem;
      color: var(--admin-text-primary);
    }

    /* estado / badges */
    .badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.28rem 0.5rem;
      border-radius: 999px;
      font-weight: 600;
      font-size: 0.85rem;
    }

    .badge--active {
      background: rgba(58, 142, 255, 0.1);
      color: var(--admin-accent-color);
    }

    .badge--inactive {
      background: rgba(255, 255, 255, 0.02);
      color: var(--admin-text-secondary);
    }

    .badge--pending {
      background: rgba(255, 200, 0, 0.08);
      color: #ffd66b;
    }

    /* acciones */
    .expertos-actions {
      display: flex;
      gap: 0.5rem;
      justify-content: flex-end;
    }

    /* ============================
       PAGINACIÓN
       ============================ */
    .expertos-paginacion {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 1rem;
      padding-top: 0.25rem;
    }

    .expertos-paginacion__controles {
      display: flex;
      gap: 0.4rem;
      align-items: center;
    }

    .expertos-paginacion__btn {
      background: transparent;
      border: 1px solid var(--admin-border-color);
      color: var(--admin-text-primary);
      padding: 0.45rem 0.6rem;
      border-radius: 8px;
      cursor: pointer;
      min-width: 38px;
    }

    .expertos-paginacion__btn--active {
      background: linear-gradient(180deg, var(--admin-accent-color), var(--admin-accent-secondary));
      color: #071426;
      border: none;
    }

    .expertos-paginacion__btn--disabled {
      opacity: 0.45;
      cursor: default;
    }

    .expertos-paginacion__info {
      color: var(--admin-text-secondary);
      font-size: 0.9rem;
    }

    /* ============================
       ACCESIBILIDAD Y PEQUEÑAS MEJORAS
       ============================ */
    .expertos-card * {
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    /* focus visible para accesibilidad */
    .expertos-filtros__select:focus,
    .expertos-paginacion__btn:focus,
    .expertos-filtros__btn:focus {
      outline: 3px solid rgba(58, 142, 255, 0.12);
      outline-offset: 2px;
    }

    /* ============================
       RESPONSIVE: adaptaciones por ancho
       ============================ */
    @media (max-width: 1100px) {
      .expertos-grid {
        grid-template-columns: 260px 1fr;
      }

      .expertos-grid__filters {
        min-width: 220px;
        padding: 0.9rem;
      }
    }

    @media (max-width: 820px) {

      /* pasar sidebar arriba y permitir scroll vertical natural */
      .expertos-grid {
        grid-template-columns: 1fr;
      }

      .expertos-grid__filters {
        order: -1;
        /* mostrar antes del contenido */
        width: 100%;
        display: grid;
        grid-auto-flow: row;
        gap: 0.6rem;
      }

      .expertos-filtros {
        grid-template-columns: 1fr 1fr;
        gap: 0.5rem;
      }

      .expertos-filtros__btn {
        grid-column: 1 / -1;
      }

      /* estadísticas: dos columnas en pantallas medianas */
      .expertos-estadisticas__list {
        grid-template-columns: 1fr 1fr;
      }

      table.admin-table {
        min-width: 640px;
      }
    }

    @media (max-width: 520px) {
      .expertos-filtros {
        grid-template-columns: 1fr;
      }

      .expertos-estadisticas__list {
        grid-template-columns: 1fr;
      }

      .expertos-filtros__title,
      .expertos-estadisticas__title {
        font-size: 0.96rem;
      }

      table.admin-table {
        min-width: 480px;
        font-size: 0.92rem;
      }

      .expertos-paginacion {
        flex-direction: column;
        align-items: stretch;
        gap: 0.5rem;
      }

      .expertos-paginacion__controles {
        justify-content: center;
      }
    }
  </style>

