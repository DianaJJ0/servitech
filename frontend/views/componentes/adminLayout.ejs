<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= typeof title !=='undefined' ? title : 'Panel Admin' %> - Servitech Admin
  </title>
  <link rel="stylesheet" href="/assets/css/base.css" />
  <link rel="stylesheet" href="/assets/css/administrador.css" />
  <link rel="stylesheet" href="/assets/css/admin.css" />
  <link rel="stylesheet" href="/assets/css/admin-responsive.css" />
  <link rel="stylesheet" href="/assets/css/admin-access.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <% if (extraCss) { extraCss.forEach(css=> { %>
    <link rel="stylesheet" href="<%= css %>" />
    <% }) } %>
</head>

<body>
  <div class="admin-layout">
    <%- include('componentes/navbarAdmin.ejs') %>
      <main class="admin-main">
        <%- body %>
      </main>
  </div>
  <% if (extraJs) { extraJs.forEach(js=> { %>
    <script src="<%= js %>"></script>
    <% }) } %>
      <% if (typeof showDevAdmin !=='undefined' && showDevAdmin) { %>
        <script src="/assets/js/admin-button.js"></script>
        <% } %>
          <!-- CSRF helper injected via admin-common.js -->
          <script type="application/json" id="initial-csrf">
            {"csrfToken": <%= JSON.stringify(typeof csrfToken !== 'undefined' ? csrfToken : (typeof locals !== 'undefined' && locals.csrfToken ? locals.csrfToken : '')) %>}
          </script>
          <script src="/assets/js/admin-common.js"></script>
          <script>
            // admin-common initialization: safe, idempotent call executed inline to bootstrap CSRF token handling
            (function () {
              try {
                var el = document.getElementById('initial-csrf');
                if (el && window.__adminCommon && typeof window.__adminCommon.initCsrf === 'function') {
                  try { var data = JSON.parse(el.textContent || '{}'); if (data.csrfToken) window.__adminCommon.initCsrf(data.csrfToken); } catch (e) { }
                }
              } catch (e) { }
            })();
          </script>
          <% if (typeof API_KEY !=='undefined' && API_KEY) { %>
            <script>
              // Exponer API key para llamadas admin desde cliente (solo para sesiones admin)
              window.API_KEY = '<%= API_KEY %>';
            </script>
            <% } %>
</body>

</html>
