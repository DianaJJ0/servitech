<!--
  Archivo: componentes/adminLayout.ejs
  Propósito: Layout base para vistas del panel de administración. Provee estructura HTML completa y puntos para incluir CSS/JS adicionales.
  Variables EJS esperadas:
    - title: string (opcional) - título de la página
    - body: HTML - contenido principal (habitualmente renderizado por el servidor o por un engine de templates)
    - extraCss: array<string> (opcional) - hojas CSS adicionales para la página
    - extraJs: array<string> (opcional) - scripts adicionales a inyectar antes del cierre del body
    - showDevAdmin: boolean (opcional) - activa scripts/dependencias de desarrollo en admin
    - csrfToken: string (opcional) - token CSRF inyectado para uso de admin-common.js
    - API_KEY: string (opcional, solo para sesiones admin) - expuesto deliberadamente a cliente admin si procede
  Dependencias CSS/JS:
    - /assets/css/administrador.css, /assets/css/admin.css, /assets/css/admin-components.css
    - Bootstrap CDN (opcional), FontAwesome, /assets/js/admin-common.js, /assets/js/admin-* modules
  Notas técnicas:
    - Este layout inyecta un <script type="application/json" id="initial-csrf"> con csrfToken; evitar exponer otros secretos.
    - API_KEY solo debe exponerse si la sesión pertenece a un usuario admin autorizado; revisa riesgos de seguridad antes de usar en ambientes productivos.
-->

<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= typeof title !=='undefined' ? title : 'Panel Admin' %> - Servitech Admin
  </title>
  <link rel="stylesheet" href="/assets/css/base.css" />
  <!-- Bootstrap CSS for responsive sidebar / offcanvas support -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/assets/css/administrador.css" />
  <link rel="stylesheet" href="/assets/css/admin.css" />
  <!-- admin-responsive.css retirado: reglas migradas a hojas por página -->
  <!-- admin-access.css removed: admin button moved into user dropdown -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <% if (extraCss) { extraCss.forEach(css=> { %>
    <link rel="stylesheet" href="<%= css %>" />
    <% }) } %>
</head>

<body>
  <div class="admin-layout">
    <%- include('componentes/navbarAdmin.ejs') %>
      <main class="admin-main">
        <%- body %>
      </main>
  </div>
  <% if (extraJs) { extraJs.forEach(js=> { %>
    <script src="<%= js %>"></script>
    <% }) } %>
      <% if (typeof showDevAdmin !=='undefined' && showDevAdmin) { %>
        <script src="/assets/js/admin-button.js"></script>
        <% } %>
          <!-- CSRF helper injected via admin-common.js -->
          <script type="application/json" id="initial-csrf">
            {"csrfToken": <%= JSON.stringify(typeof csrfToken !== 'undefined' ? csrfToken : (typeof locals !== 'undefined' && locals.csrfToken ? locals.csrfToken : '')) %>}
          </script>
          <!-- Bootstrap bundle (includes Popper) -->
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
          <script src="/assets/js/admin-common.js"></script>
          <script>
            // admin-common initialization: safe, idempotent call executed inline to bootstrap CSRF token handling
            (function () {
              try {
                var el = document.getElementById('initial-csrf');
                if (el && window.__adminCommon && typeof window.__adminCommon.initCsrf === 'function') {
                  try { var data = JSON.parse(el.textContent || '{}'); if (data.csrfToken) window.__adminCommon.initCsrf(data.csrfToken); } catch (e) { }
                }
              } catch (e) { }
            })();
          </script>
          <% if (typeof API_KEY !=='undefined' && API_KEY) { %>
            <script>
              // Exponer API key para llamadas admin desde cliente (solo para sesiones admin)
              window.API_KEY = '<%= API_KEY %>';
            </script>
            <% } %>
</body>

</html>
