<header class="admin-header">
  <div class="header-left">
    <!-- Botón para abrir/cerrar el menú en pantallas pequeñas -->
    <button class="header-menu-toggle" id="sidebarToggle" aria-label="Toggle navigation">
      <i class="fas fa-bars"></i>
    </button>

    <!-- Título de la página -->
    <div class="header-title">
      <h2>
        <%= typeof titulo !=='undefined' ? titulo : 'Dashboard' %>
      </h2>
    </div>
  </div>

  <div class="header-actions">
    <!-- Icono de notificaciones -->
    <div class="notification-icon">
      <i class="fas fa-bell"></i>
      <span class="notification-badge">5</span>
    </div>

    <!-- Perfil del administrador -->
    <div class="admin-profile">
      <img src="<%= typeof user !== 'undefined' && user.avatar ? user.avatar : 'https://i.pravatar.cc/150?img=11' %>"
        alt="Admin profile" class="profile-img" />
      <div class="profile-info">
        <span class="profile-name">
          <%= typeof user !=='undefined' && user.nombre ? user.nombre : 'Admin ServiTech' %>
        </span>
        <span class="profile-role">Administrador</span>
      </div>
    </div>
  </div>
</header>
