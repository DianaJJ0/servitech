<!-- Encabezado principal -->
<header class="header">
    <nav class="navbar">
        <div class="logo">
            <a href="/"><img src="/assets/img/logo.png" alt="logo" class="logo-img"></a>
        </div>
        <div class="nav-container" id="navContainer">
            <div class="nav-links">
                <a href="/" class="nav-item"><i class="fas fa-home"></i> Inicio</a>
                <a href="/expertos.html" class="nav-item"><i class="fas fa-users"></i> Expertos</a>
                <a href="/contacto.html" class="nav-item"><i class="fas fa-envelope"></i> Contacto</a>
            </div>

            <!-- Botones de autenticacion - siempre presentes en el HTML -->
            <div class="auth-buttons" id="authButtons">
                <a href="/login.html" class="btn btn-outline">Iniciar sesion</a>
                <a href="/registro.html" class="btn btn-primary">Registrarse</a>
            </div>

            <!-- Menu de usuario - siempre presente en el HTML -->
            <div class="user-menu" id="userMenuContainer">
                <% function getInitials(nombre, apellido, email) { if (nombre && apellido) return (nombre[0] +
                    apellido[0]).toUpperCase(); if (nombre) return nombre[0].toUpperCase(); if (apellido) return
                    apellido[0].toUpperCase(); if (email) return email[0].toUpperCase(); return 'U' ; } function
                    getDisplayName(nombre, email) { if (nombre) return nombre; if (email) return email.split('@')[0];
                    return 'Usuario' ; } %>
                    <div class="user-avatar" id="userAvatar">
                        <span>
                            <% if (user && user.email) { %>
                                <%= getInitials(user.nombre, user.apellido, user.email) %>
                                    <% } else { %>
                                        U
                                        <% } %>
                        </span>
                    </div>
                    <span id="userDisplayName">
                        <% if (user && user.email) { %>
                            <%= getDisplayName(user.nombre, user.email) %>
                                <% } else { %>
                                    Usuario
                                    <% } %>
                    </span>
                    <i class="fas fa-chevron-down"></i>
                    <div class="user-dropdown" id="userDropdown">
                        <a href="/perfil" class="dropdown-item"><i class="fas fa-user"></i> Mi perfil</a>
                        <a href="/misAsesorias.html" class="dropdown-item"><i class="fas fa-calendar-alt"></i> Mis
                            asesorias</a>
                        <% if (user && user.roles && user.roles.includes('experto')) { %>
                            <a href="/editarExperto" class="dropdown-item"><i class="fas fa-calendar-alt"></i> Editar
                                datos de experto</a>
                            <% } %>
                                <button class="dropdown-item" id="logoutBtn"><i class="fas fa-sign-out-alt"></i> Cerrar
                                    sesion</button>
                    </div>
            </div>

            <!-- Boton de admin - solo si el usuario es admin -->
            <% if (user && user.roles && user.roles.includes('admin')) { %>
                <div class="admin-access" id="adminAccess" role="region" aria-label="Acceso administradores"
                    style="display:none">
                    <a href="/admin/adminExpertos" class="btn btn-admin" id="adminPanelBtn"
                        title="Abrir panel de administradores">
                        <i class="fas fa-tools" aria-hidden="true"></i>
                        <span class="btn-text">Admin</span>
                    </a>
                </div>
                <% } %>
        </div>

        <div class="mobile-menu-toggle mobile-only" id="mobileMenuToggle">
            <i class="fas fa-bars"></i>
        </div>
    </nav>

    <!-- Meta datos para JavaScript en atributos data -->
    <div id="headerUserData" data-is-authenticated="<%= user && user.email ? 'true' : 'false' %>"
        data-user-json="<%= user ? encodeURIComponent(JSON.stringify(user)) : '' %>">
    </div>
</header>
